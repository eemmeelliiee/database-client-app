                        <ComboBox fx:id="removeMilestoneProjectNo" layoutX="253.0" layoutY="57.0" onAction="#onActionProjectSelected" prefWidth="150.0" />
                        <ComboBox fx:id="removeMilestoneNo" layoutX="253.0" layoutY="109.0" prefWidth="150.0" />
                        <Label fx:id="removeMilestoneLabelResponse" layoutX="14.0" layoutY="201.0" prefHeight="72.0" prefWidth="571.0" />
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="retrieveMSPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="376.0" prefWidth="586.0">
                    <children>
                        <Label layoutX="241.0" layoutY="14.0" text="Overview of Milestones:" />
                        <TableView fx:id="milestoneTableView" layoutX="87.0" layoutY="79.0" prefHeight="188.0" prefWidth="428.0">
                            <columns>
                            <TableColumn fx:id="milestoneNoColumn" prefWidth="115.5" text="Milestone Number" />
                            <TableColumn fx:id="milestoneNameColumn" prefWidth="183.5" text="Name" />
                            <TableColumn fx:id="milestoneDateColumn" prefWidth="128.0" text="Date" />
                            </columns>
                        </TableView>
                        <Label layoutX="325.0" layoutY="62.0" prefHeight="17.0" prefWidth="157.0" text="Total number of milestones:" wrapText="true" />
                        <ComboBox fx:id="projectNoComboBox" layoutX="87.0" layoutY="49.0" onAction="#onProjectSelected" prefWidth="150.0" promptText="Choose Project:" />
                        <Label fx:id="totalMilestonesLabel" layoutX="482.0" layoutY="62.0" prefHeight="17.0" prefWidth="49.0">
                           <font>
                              <Font name="System Bold Italic" size="13.0" />
                           </font></Label>
                        <Button fx:id="buttonRemoveMilestone" layoutX="319.0" layoutY="278.0" mnemonicParsing="false" onAction="#handleButtonRemoveMilestone" prefHeight="26.0" prefWidth="196.0" text="Remove milestone from project" />

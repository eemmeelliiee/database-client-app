                    </children>
                </AnchorPane>
                <AnchorPane fx:id="addMSPane" prefHeight="342.0" prefWidth="586.0" visible="false">
                    <children>
                        <Label layoutX="241.0" layoutY="14.0" text="Add Milestone to Project:" />
                        <Label layoutX="158.0" layoutY="78.0" text="Milestone Number:" />
                        <Label layoutX="173.0" layoutY="117.0" text="Project Number:" />
                        <Label layoutX="229.0" layoutY="153.0" prefWidth="29.0" text="Date:" />
                        <Label layoutX="225.0" layoutY="188.0" text="Name:" />

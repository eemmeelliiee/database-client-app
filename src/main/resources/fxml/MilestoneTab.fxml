                        <TextField fx:id="registerMilestoneName" layoutX="288.0" layoutY="183.0" prefHeight="26.0" prefWidth="144.0" promptText="Ex: Phase 1 completion" />
                        <DatePicker fx:id="registerMilestoneDate" layoutX="288.0" layoutY="148.0" prefHeight="26.0" prefWidth="144.0" />
                        <Button fx:id="registerMilestoneButton" layoutX="392.0" layoutY="225.0" mnemonicParsing="false" onAction="#handleButtonRegisterMilestone" text="Add" />
                        <Label fx:id="registerMilestoneStatus" layoutX="27.0" layoutY="267.0" prefHeight="26.0" prefWidth="464.0" />
                        <ComboBox fx:id="registerMilestoneProjectNo" layoutX="288.0" layoutY="112.0" prefHeight="26.0" prefWidth="144.0" />
                    </children>
                </AnchorPane>
                </children>
            </StackPane>
        </children>
    </AnchorPane>
    </items>
</SplitPane>

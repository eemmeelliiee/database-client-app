    <items>
    <AnchorPane maxHeight="-Infinity" minHeight="0.0" minWidth="0.0" prefHeight="97.0" prefWidth="598.0">
        <children>
            <Button fx:id="showAddMSPane" layoutX="123.0" layoutY="49.0" mnemonicParsing="false" onAction="#handleShowAddMSPane" prefHeight="26.0" prefWidth="150.0" text="Add Milestone to Project">
